{
    "name": "gnahotelsolutions/flasher",
    "description": "Flash notifications in Laravel",
    "authors": [
        {
            "name": "Maria Carrero",
            "email": "mcarrero@gna.es"
        },
        {
            "name": "David Llop",
            "email": "dllop@gna.es"
        }
    ],
    "type": "library",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "GNAHotelSolutions\\Flasher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "GNAHotelSolutions\\Flasher\\FlasherServiceProvider"
            ]
        }
    },
    "license": "MIT"
}
